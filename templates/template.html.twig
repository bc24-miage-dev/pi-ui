<!DOCTYPE HTML>

<html>
<head>
    <title>{% block title %}BC24{% endblock %}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    {% block stylesheet %}
    {% endblock %}

    {% block icon %}
        <link rel="icon" href="{{ asset('images/logo.png') }}" type="image/png">
    {% endblock %}

</head>
<body class="is-preload homepage">
<div id="page-wrapper">

    <!-- Header -->
    <div id="header-wrapper">
        <header id="header" class="container">

            <!-- Logo -->
            <div id="logo">
                <h1><a href="{{ path('app_index') }}">BC24</a></h1>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li><a href="{{ path('app_index') }}">Menu</a></li>
                    <li>
                        <a>Espace Client</a>
                        <ul>
                            {% if not app.user %}
                                <li><a href="{{ path('app_login') }}">Connexion</a></li>
                                <li><a href="{{ path('app_register') }}">Création de Compte</a></li>
                            {% else %}
                                <li><a href="{{ path('app_user_account') }}">Mon Compte</a></li>
                                <li><a href="{{ path('app_history', {'page': 1}) }}">Historique de recherche</a></li>
                                <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                            {% endif %}
                        </ul>
                    </li>
                    <li><a href="{{ path('app_contact') }}">Nous Contacter</a></li>
                    <li><a href={{ path('app_report_reportAliment') }}>Signaler un produit</a></li>
                    <li><a href="{{ path('app_recent') }}">Produits dangereux récents</a></li>
                </ul>

            </nav>



            {% for flash_message in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.flashes('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.flashes('info') %}
                <div class="alert alert-info" role="alert">
                    {{ flash_message }}
                </div>
            {% endfor %}
        </header>
        <br><hr>
    </div>

    <!-- body -->

    {% block body %}
        {% if app.user %}
            {% if "ROLE_PRO" in app.user.roles %}
        <a href="{{ path('app_pro') }}">Passer à la vue Professionnelle</a>
            {% endif %}
        {% endif %}
    {% endblock %}

    <!-- Footer -->

    <div id="footer-wrapper">
        <hr><br>
        <footer id="footer" class="container">
            <h2>BC24 - Traçabilité</h2>
            <div class="row">
                <div class="col-3 col-6-medium col-12-small">
                    <!-- Links -->
                    <section class="widget links">
                        <h3>Professionnels :</h3>
                        <ul class="style2">
                            <li><a href="#">Producteur</a></li>
                            <li><a href="#">Équarrisseur</a></li>
                            <li><a href="#">Usine</a></li>
                        </ul>
                    </section>

                </div>

                <!-- Contact -->
                <div class="col-3 col-6-medium col-12-small">
                    <section class="widget links">
                        <h3>Nous contacter</h3>
                        <ul class="style2">
                            <li><a href="{{ path('app_contact') }}">Formulaire de contact</a></li>
                            <li>90 rue de Tolbiac</li>
                            <li>Paris, 75013</li>
                            <li>+33 7 98 14 92 18</li>
                            <li>BC24@gmail.com</li>

                        </ul>
                    </section>
                </div>
                <div class="col-3 col-6-medium col-12-small">

                    <!-- Réseaux -->
                    <section class="widget contact last">
                        <h3>Nos réseaux sociaux</h3>
                        <ul>
                            <li><a href="#" class="icon brands fa-twitter"><span class="label">Twitter</span></a></li>
                            <li><a href="#" class="icon brands fa-facebook-f"><span class="label">Facebook</span></a></li>
                            <li><a href="#" class="icon brands fa-instagram"><span class="label">Instagram</span></a></li>
                            <li><a href="#" class="icon brands fa-snapchat"><span class="label">Snapchat</span></a></li>
                            <li><a href="#" class="icon brands fa-tiktok"><span class="label">TikTok</span></a></li>
                        </ul>

                    </section>

                </div>

            </div>
            <div class="row">
                <div class="col-12">
                    <div id="copyright">
                        <ul class="menu">
                            <li>&copy; BC24. All rights reserved</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

</div>

<!-- Scripts -->

<script src="{{ asset('assets/js/jquery.min.js') }}"></script>
<script src="{{ asset('assets/js/jquery.dropotron.min.js') }}"></script>
<script src="{{ asset('assets/js/browser.min.js') }}"></script>
<script src="{{ asset('assets/js/breakpoints.min.js') }}"></script>
<script src="{{ asset('assets/js/util.js') }}"></script>
<script src="{{ asset('assets/js/main.js') }}"></script>

</body>
</html>
