{% block name %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website Title</title>
    <link rel="stylesheet" href="{{ asset('css/main.css') }}"> <!-- Path to your main CSS -->
    <link rel="stylesheet" href="{{ asset('css/sidebar.css') }}"> <!-- Path to your sidebar CSS -->
    <link rel="stylesheet" href="{{ asset('css/header.css') }}"> <!-- Path to your header CSS -->
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}"> <!-- Path to your footer CSS -->
</head>
<body>
    <header>
        
        {% include 'fragments/header.html.twig' %}
    </header>

    <aside id="sidebar">
        
        {% include 'fragments/sidebar.html.twig' %}
    </aside>

    <main>
        
        {% block main %}{% endblock %}
    </main>

    <footer>
       
        {% include 'fragments/footer.html.twig' %}
    </footer>

    
    <script src="{{ asset('js/script.js') }}"></script>
</body>
</html>
{% endblock %}